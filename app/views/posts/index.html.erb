<h1>Home</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '編集', edit_post_path(post.id)%></td>
    <td><%= link_to '削除', post_path(post.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>
<br>
<%= link_to 'ツイートする', new_post_path %>
